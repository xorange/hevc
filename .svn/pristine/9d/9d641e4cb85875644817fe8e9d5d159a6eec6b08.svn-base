


#ifndef X265_YUV_H
#define X265_YUV_H


typedef struct
{
	// ------------------------------------------------------------------------------------------------------------------
	//  YUV buffer
	// ------------------------------------------------------------------------------------------------------------------

	pixel* buf_y;
	pixel* buf_u;
	pixel* buf_v;

	// ------------------------------------------------------------------------------------------------------------------
	//  Parameter for general YUV buffer usage
	// ------------------------------------------------------------------------------------------------------------------

	uint32_t i_width;
	uint32_t i_height;
	uint32_t i_c_width;
	uint32_t i_c_height;

} x265_yuv_t ;


x265_yuv_t *x265_yuv_new () ;
void x265_yuv_delete ( x265_yuv_t *yuv ) ;

int x265_yuv_init ( x265_yuv_t *yuv );
void x265_yuv_deinit ( x265_yuv_t *yuv );

#endif

